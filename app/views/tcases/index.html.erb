<h1>Cases</h1>

<table>
  <tr>
    <th>Case Title</th>
    <th>Summary</th>
  </tr>

  <% @tcases.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.summary %></td>
        <td><%= link_to 'Show', tcase_path(t) %></td>
        <td><%= link_to 'Edit', edit_tcase_path(t) %></td>
        <td><%= link_to 'Delete', t, method: :delete, data: {confirm: 'Are you sure ?'} %></td>
      </tr>
  <% end %>

  <%= link_to 'Create New Case', new_tcase_path %>

</table>