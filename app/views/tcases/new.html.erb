<%= form_for :tcases, url: tcases_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :instruction %><br>
      <%= f.text_area :instruction %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>