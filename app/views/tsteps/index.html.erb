<h1>Steps</h1>

<table>
  <tr>
    <th>expresult</th>
    <th>envir</th>
    <th>author</th>
  </tr>

  <% @tstep.each do |t| %>
      <tr>
        <td><%= t.expresult %></td>
        <td><%= t.envir %></td>
        <td><%= t.author %></td>
        <td><%= link_to 'Edit', edit_tcase_path(t) %></td>
        <td><%= link_to 'Delete', t, method: :delete, data: {confirm: 'Are you sure ?'} %></td>
      </tr>
  <% end %>

  <%= link_to 'Create New Case', new_tcase_tstep_path %>

</table>